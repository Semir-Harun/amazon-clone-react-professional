{
  "name": "amazon-clone-react",
  "version": "1.0.0",
  "description": "A full-featured Amazon clone built with React and Firebase, showcasing modern e-commerce functionality",
  "author": "Clever Programmers",
  "license": "MIT",
  "keywords": [
    "react",
    "firebase",
    "ecommerce",
    "amazon",
    "clone",
    "javascript",
    "material-ui"
  ],
  "homepage": "https://clone-mar21.web.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Semir-Harun/amazon-clone-react-professional.git"
  },
  "bugs": {
    "url": "https://github.com/Semir-Harun/amazon-clone-react-professional/issues"
  },
  "private": false,
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "firebase": "^8.3.1",
    "firebase-tools": "^9.8.0",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-number-format": "^4.5.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^5.2.1",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve": "serve -s build",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:ci": "CI=true npm test -- --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
